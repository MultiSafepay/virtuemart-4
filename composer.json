{
    "name": "multisafepay/virtuemart-4",
    "description": "MultiSafepay Plugin for VirtueMart 4",
    "type": "virtuemart-plugin",
    "license": "MIT",
    "keywords": ["virtuemart", "joomla", "multisafepay"],
    "require": {
        "php": "^8.1",
        "multisafepay/php-sdk": "^5.9",
        "guzzlehttp/guzzle": "^7.5"
    },
    "config": {
        "vendor-dir": "plg_vmpayment_multisafepay/vendor/",
        "allow-plugins": {
            "php-http/discovery": false,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "multisafepay/coding-standards": "dev-master"
    },
    "scripts": {
        "phpcs": "@php plg_vmpayment_multisafepay/vendor/bin/phpcs --standard=phpcs.xml plg_vmpayment_multisafepay -s",
        "phpcbf": "@php plg_vmpayment_multisafepay/vendor/bin/phpcbf --standard=phpcs.xml plg_vmpayment_multisafepay"
    }
}
